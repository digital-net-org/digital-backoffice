{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@digital-net/core/*": ["packages/digital-net/packages/core/*"],
            "@digital-net/core": ["packages/digital-net/packages/core/index.ts"],
            "@digital-net/react-dev-tools/*": ["packages/digital-net/packages/react-dev-tools/*"],
            "@digital-net/react-dev-tools": ["packages/digital-net/packages/react-dev-tools/index.ts"],
            "@digital-net/react-elements/*": ["packages/digital-net/packages/react-elements/*"],
            "@digital-net/react-elements": ["packages/digital-net/packages/react-elements/index.ts"],
            "@digital-net/react-storage/*": ["packages/digital-net/packages/react-storage/*"],
            "@digital-net/react-storage": ["packages/digital-net/packages/react-storage/index.ts"],
            "@digital-net/react-ui/*": ["packages/digital-net/packages/react-ui/*"],
            "@digital-net/react-ui": ["packages/digital-net/packages/react-ui/index.ts"],
        },
        "composite": true,
        "allowJs": true,
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve"
    },
    "include": ["src", "packages"],
    "exclude": ["node_modules", "dist"]
}
